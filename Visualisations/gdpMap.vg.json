{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "World GDP (Billion USD$)",
    "subtitle": "Hover over a country to see exact figures. Use the slider to change the year.",
    "subtitleColor": "gray",
    "fontSize": 20,
    "fontWeight": "bold"
  },
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/arav0020/FIT3179-DataVis2/refs/heads/main/Base%20Data/ne_110m_admin_0_countries.topojson",
    "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
  },
  "projection": { "type": "equalEarth" },
  "params": [
    {
      "name": "year_selection",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/arav0020/FIT3179-DataVis2/refs/heads/main/Base%20Data/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": { "type": "geoshape", "fill": "skyblue" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/arav0020/FIT3179-DataVis2/refs/heads/main/Base%20Data/WorldMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
    },
    {
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/arav0020/FIT3179-DataVis2/refs/heads/main/Data/worldGDP_converted.csv"
            },
            "key": "Code",
            "fields": [
              "1960",
              "1961",
              "1962",
              "1963",
              "1964",
              "1965",
              "1966",
              "1967",
              "1968",
              "1969",
              "1970",
              "1971",
              "1972",
              "1973",
              "1974",
              "1975",
              "1976",
              "1977",
              "1978",
              "1979",
              "1980",
              "1981",
              "1982",
              "1983",
              "1984",
              "1985",
              "1986",
              "1987",
              "1988",
              "1989",
              "1990",
              "1991",
              "1992",
              "1993",
              "1994",
              "1995",
              "1996",
              "1997",
              "1998",
              "1999",
              "2000",
              "2001",
              "2002",
              "2003",
              "2004",
              "2005",
              "2006",
              "2007",
              "2008",
              "2009",
              "2010",
              "2011",
              "2012",
              "2013",
              "2014",
              "2015",
              "2016",
              "2017",
              "2018",
              "2019",
              "2020",
              "2021",
              "2022"
            ]
          }
        },
        {
          "filter": "toNumber(datum[year_selection]) != null && datum[year_selection] != '' && datum[year_selection] > 0"
        },
        {
          "calculate": "toNumber(datum[year_selection])/1000000000",
          "as": "GDP (Billion $)"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "GDP (Billion $)",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "scheme": "yellowgreenblue",
            "domain": [1, 10000]
          },
          "legend": {
            "title": "GDP (Billion USD$)",
            "titleFontSize": 15,
            "labelFontSize": 15,
            "padding": 20
          }
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          {
            "field": "GDP (Billion $)",
            "type": "quantitative",
            "format": ".2f",
            "title": "GDP (Billion $)"
          }
        ]
      }
    }
  ],
  "config": {}
}
